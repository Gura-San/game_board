{{# each cards as |card index|}}

<div class="col l4 m3 s2">
  <div class="card">
    <div class="card-image">
      <img src=https://images.igdb.com/igdb/image/upload/t_cover_big/{{card.cover.cloudinary_id}}.jpg> {{!--
      <span class="card-title">{{card.name}}</span> --}}
      <form action="/add/{{card.id}}?_method=put" method="post">
        <button type="submit" class="btn-floating halfway-fab waves-effect waves-light red">
          <i class="material-icons">add</i>
        </button>
      </form>
    </div>
    <div class="card-content">
      <span class="card-title activator">{{card.name}}</span>
    </div>

    <div class="card-reveal">
      <span class="card-title">Review:</span>
      <div class="card-action">
        <a href="" class="orange btn">
          <i class="material-icon">add</i>
        </a>
        <a href="" class="btn">
          <i class="material-icon">edit</i>
        </a>
      </div>
    </div>
  </div>
</div>

{{/each}}
