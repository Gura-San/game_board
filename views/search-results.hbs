{{# each cards as |card index|}}

<div class="card">
  <div class="card-image">
    <img src=https://images.igdb.com/igdb/image/upload/t_cover_big/{{card.cover.cloudinary_id}}.jpg>
    <form action="/add/{{card.id}}?_method=put" method="post">
      <button type="submit" id="idBtn" class="btn-floating halfway-fab waves-effect waves-light red">
        <i class="material-icons">add</i>
      </button>
    </form>
  </div>
  <div class="card-content">
    <span class="card-title">{{card.name}}</span>
  </div>
</div>

{{/each}}
